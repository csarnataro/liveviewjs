{
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run clean; npm run build; npm run copy-views; npm run client-build; nodemon -e js -w dist dist/index.js",
    "client-build": "rm -rf dist/client; npm run appjs; npm run appcss; npm run copy-public",
    "appjs": "npm run check; parcel build",
    "appcss": "tailwindcss -i ./src/client/app.css -o ./dist/client/app.css",
    "copy-views": "mkdir -p dist/views; cp -r src/views/* dist/views",
    "copy-public": "cp -r public/* dist/client",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "targets": {
    "client": {
      "source": [
        "src/client/app.ts"
      ],
      "context": "browser",
      "distDir": "dist/client"
    }
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "liveviewjs": "^0.0.7",
    "nprogress": "^0.2.0",
    "phoenix": "^1.6.6",
    "phoenix_html": "^3.2.0",
    "phoenix_live_view": "^0.17.7",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/express-session": "^1.17.4",
    "@types/node": "^17.0.17",
    "@types/nprogress": "^0.2.0",
    "@types/phoenix": "^1.5.4",
    "@types/phoenix_live_view": "^0.15.1",
    "nodemon": "^2.0.15",
    "parcel": "^2.3.2",
    "tailwindcss": "^3.0.23",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
